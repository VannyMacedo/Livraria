<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_dynamic_neutral_variant80">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="152dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeee"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/homeeebt"
                tools:srcCompat="@drawable/homeeebt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12Teste"
                android:layout_width="44dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/favorite"
                tools:srcCompat="@drawable/favorite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12Ok"
                android:layout_width="47dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/imgbolsa"
                tools:srcCompat="@drawable/imgbolsa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12Otimo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5EBDE9"
                app:srcCompat="@android:drawable/ic_input_get" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="32dp"
        android:background="#011F37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12Ok2"
        android:layout_width="47dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28"
        app:srcCompat="@android:drawable/ic_input_get" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_marginTop="220dp"
        android:text="Lista de Desejos"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="331dp"
        android:layout_height="70dp"
        android:text="Aqui você pode indicar os livros que mais deseja, para adcionar no Catalogo de Livros de SacraBook's!"
        android:textColor="#030E52"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.394" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="182dp"
        android:background="@drawable/fundo2"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="Localização"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Capitão Poço, PA"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </LinearLayout>



    <View
        android:id="@+id/view"
        android:layout_width="444dp"
        android:layout_height="11dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="#003781"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/salvarbutton"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:layout_marginBottom="68dp"
        android:text="Salvar"
        android:textColorLink="#003781"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomelivro"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/nomelivro"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:text=" Nome Livro"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.07"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/nomeautor"
        android:layout_width="304dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_text_background"
        android:text=" Nome do Autor"
        app:layout_constraintBottom_toTopOf="@+id/salvarbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomelivro"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>